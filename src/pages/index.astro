---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Bordereau from "../components/Bordereau.astro";
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main class="container">
      <div class="flex flex-col gap-2 md:gap-4 py-6 md:py-8">
        <h1
          class="text-3xl lg:text-6xl md:text-5xl sm:text-4xl font-bold text-center"
        >
          Explorons ensemble les horizons de l'<span class="text-brand"
            >Utopie</span
          > numérique.
        </h1>
        <p class="text-lg text-gray-700 dark:text-gray-300 text-center">
          <span class="font-bold">Utopiaz</span>, où l'imagination prend vie et
          les frontières s'estompent. <br /> Un espace où les possibilités semblent
          infinies.
        </p>
      </div>
      <img
        src="/utopia-header.webp"
        title="Image d'une société utopique numérique"
        alt="Image d'une société utopique numérique"
        class="mb-8 lg:my-8 rounded-md"
      />
    </main>
    <Bordereau />
    <Footer />
  </body>
</html>
