---
const { title, tag, imgLink, summary } = Astro.props;
---

<div class="flex flex-col gap-2">
  <img
    src={imgLink}
    alt={title}
    title={title}
    class="aspect-[3/4] object-cover object-center"
  />
  <div
    class="flex flex-col gap-2 md:flex-row md:justify-between items-start lg:items-center"
  >
    <p class="uppercase font-medium tracking-tight text-xl">{title}</p>
    <span
      class="rounded-full bg-brand/15 w-fit py-1 px-2 font-semibold text-xs inline-block"
    >
      {tag}
    </span>
  </div>
  <p class="text-gray-700 text-sm">{summary}</p>
</div>
