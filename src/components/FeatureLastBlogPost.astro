---
import Article from "./Article.astro";
import { getLastPost } from "../consts";
---

<section class="container py-6 md:py-12">
  <div class="flex flex-col gap-4 md:flex-row md:gap-8 md:child:basis-full">
    <div class="flex flex-col justify-between gap-4">
      <h2
        class="text-2xl lg:text-5xl md:text-4xl sm:text-3xl text-brand font-semibold"
      >
        ðŸ“š Notre dernier article
      </h2>
      <span
        class="rounded-full bg-brand/15 w-fit py-1 px-3 cursor-pointer font-semibold text-sm"
        >Tech</span
      >
      <Article
        title={getLastPost.data.title}
        link={`/blog/${getLastPost.slug}/`}
        summary={getLastPost.data.description}
      />
    </div>
    <div>
      <img
        src="/blog-placeholder-1.jpg"
        alt=""
        class="h-full object-center object-cover"
      />
    </div>
  </div>
</section>
